<!DOCTYPE html>
<html lang="uk">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Список військовослужбовців</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <h1>Список військовослужбовців</h1>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Ім'я</th>
        <th>Прізвище</th>
        <th>По батькові</th>
        <th>Звання</th>
        <th>Рік народження</th>
        <th>Дії</th>
      </tr>
    </thead>
    <tbody id="personnelTableBody">
      <!-- Дані будуть вставлені через JavaScript -->
    </tbody>
  </table>
  <script>
    fetch('http://localhost:3001/personnel')
      .then(response => response.json())
      .then(data => {
        const tableBody = document.getElementById('personnelTableBody');
        data.forEach(person => {
          const row = document.createElement('tr');
          row.innerHTML = `
            <td>${person.ID}</td>
            <td>${person.FirstName}</td>
            <td>${person.LastName}</td>
            <td>${person.MiddleName}</td>
            <td>${person.Rank}</td>
            <td>${person.BirthYear}</td>
            <td>
              <a href="/editPersonnel?ID=${person.ID}">Редагувати</a>
              <button onclick="deletePersonnel('${person.ID}')">Видалити</button>
            </td>
          `;
          tableBody.appendChild(row);
        });
      });

    function deletePersonnel(ID) {
      fetch(`http://localhost:3001/personnel/${ID}`, {
        method: 'DELETE'
      })
      .then(response => response.json())
      .then(data => {
        alert('Військовослужбовця видалено');
        window.location.reload();
      });
    }
  </script>
</body>
</html>
